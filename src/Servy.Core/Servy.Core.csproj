    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyTitle>Servy.Core</AssemblyTitle>
    <AssemblyDescription>Shared functionality, utilities, and data models</AssemblyDescription>
    <Company>Akram El Assas</Company>
    <Product>Servy.Core</Product>
    <Version>1.8.0</Version>
    <FileVersion>1.8.0.0</FileVersion>
    <AssemblyVersion>1.8.0.0</AssemblyVersion>
    <Copyright>Copyright Â© 2025 Akram El Assas. All rights reserved.</Copyright>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.1.66" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="System.Diagnostics.PerformanceCounter" Version="8.0.1" />
    <PackageReference Include="System.Management" Version="8.0.0" />
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="8.0.0" />
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="8.0.1" />
  </ItemGroup>

</Project>
