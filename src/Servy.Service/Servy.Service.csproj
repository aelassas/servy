<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Required for single exe -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <!-- Or win-arm64 / win-x86 -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <!-- Optional: reduces size, but test thoroughly -->
    <PublishTrimmed>false</PublishTrimmed>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <!-- Optional: reduces size -->
    <InvariantGlobalization>true</InvariantGlobalization>
    <!-- Optional: removes PDB symbols -->
    <StripSymbols>true</StripSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Servy.Restarter.exe" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Servy.Restarter.exe" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Servy.Core\Servy.Core.csproj" />
  </ItemGroup>

</Project>
