<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Required for single exe -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <!-- Or win-arm64 / win-x86 -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <!-- Optional: reduces size, but test thoroughly -->
    <PublishTrimmed>false</PublishTrimmed>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <!-- Optional: reduces size -->
    <InvariantGlobalization>true</InvariantGlobalization>
    <!-- Optional: removes PDB symbols -->
    <StripSymbols>true</StripSymbols>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyTitle>Servy.Restarter</AssemblyTitle>
    <AssemblyDescription>A tool to restart a Windows Service</AssemblyDescription>
    <Company>Akram El Assas</Company>
    <Product>Servy.Restarter</Product>
    <Version>1.0.0</Version>
    <FileVersion>1.0.0.0</FileVersion>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <Copyright>Copyright © 2025 Akram El Assas. All rights reserved.</Copyright>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="8.0.1" />
  </ItemGroup>

</Project>
