<UserControl x:Class="Servy.Manager.Views.DependenciesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:Servy.Manager"
             xmlns:resx="clr-namespace:Servy.Manager.Resources"
             xmlns:models="clr-namespace:Servy.Manager.Models"
             xmlns:viewmodels="clr-namespace:Servy.Manager.ViewModels"
             xmlns:converters="clr-namespace:Servy.UI.Converters;assembly=Servy.UI"
             xmlns:core="clr-namespace:Servy.Core.Services;assembly=Servy.Core"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT: SEARCH + SERVICES -->
        <Border Grid.Column="0" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search -->
                <DockPanel Margin="6" Focusable="True" FocusVisualStyle="{x:Null}">
                    <TextBox Width="164" Height="24" Margin="0,0,6,0"
                             VerticalContentAlignment="Center"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             KeyDown="SearchTextBox_KeyDown" />
                    <Button Width="92" Height="24"
                            Content="{Binding SearchButtonText}"
                            Command="{Binding SearchCommand}"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
                </DockPanel>

                <!-- Services list -->
                <DataGrid x:Name="ServicesDataGrid"
                          Grid.Row="1"
                          ItemsSource="{Binding Services, IsAsync=True}"
                          SelectedItem="{Binding SelectedService, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsSynchronizedWithCurrentItem="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="True"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Recycling"
                          VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                          VirtualizingStackPanel.ScrollUnit="Pixel"
                          ScrollViewer.CanContentScroll="True"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          IsReadOnly="True"
                          SelectionUnit="FullRow"
                          SelectionMode="Single"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          Background="Transparent"
                          BorderThickness="1"
                          BorderBrush="#757575"
                          FocusVisualStyle="{x:Null}"
                          >

                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#0078D7"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#0078D7"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>

                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Padding" Value="10,7"/>
                        </Style>

                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" Padding="0">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="BorderThickness" Value="0" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="*" SortMemberPath="Name" CanUserReorder="False" CanUserResize="False">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{x:Static resx:Strings.Column_Service}" FontWeight="SemiBold"/>
                            </DataGridTemplateColumn.Header>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="10,6">
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>

        <!-- RIGHT: DEPENDENCIES -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <!-- PID on the left -->
                    <ColumnDefinition Width="Auto" />

                    <!-- Spacer -->
                    <ColumnDefinition Width="10" />

                    <!-- Auto-Refresh -->
                    <ColumnDefinition Width="Auto" />

                    <!-- Spacer -->
                    <ColumnDefinition Width="*" />

                    <!-- INFO on the right -->
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--PID-->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0,0,0,6" VerticalAlignment="Center">
                    <Border Background="#F0F7FA" CornerRadius="2" Padding="4,0,0,0" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{x:Static resx:Strings.Label_Pid}" 
                                       Foreground="#1B7F9F" 
                                       FontSize="11" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Pid}" 
                                       Foreground="#1B7F9F" 
                                       FontWeight="Bold" 
                                       FontSize="12"
                                       VerticalAlignment="Center"/>

                            <Button Command="{Binding CopyPidCommand}"
                                    Margin="5,0,0,0"
                                    Padding="4"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="{x:Static resx:Strings.Button_CopyPid}"
                                    FocusVisualStyle="{x:Null}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Opacity" Value="0.5" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1.0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Path Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" 
                                      Fill="#1B7F9F" 
                                      Stretch="Uniform" 
                                      Width="12" 
                                      Height="12" />
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!--Refresh button-->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center">
                    <Button Command="{Binding RefreshCommand}"
                            Visibility="{Binding IsServiceSelected, Converter={StaticResource BoolToVisibility}}"
                            ToolTip="{x:Static resx:Strings.Tooltip_Refresh}"
                            Margin="0,0,0,6" 
                            Padding="6,1" 
                            FontSize="10.5"
                            Height="20"
                            Foreground="White"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#1B7F9F"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}" 
                                                    CornerRadius="2" 
                                                    Padding="{TemplateBinding Padding}">
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,0,1">

                                                    <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" 
                                                          Fill="White" 
                                                          Width="10" 
                                                          Height="10" 
                                                          Stretch="Uniform" 
                                                          Margin="0,0,4,0"
                                                          VerticalAlignment="Center"/>

                                                    <TextBlock Text="{x:Static resx:Strings.Button_Refresh}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#25A2C9"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#146078"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!--INFO-->
                <TextBlock Grid.Row="0"
                           Grid.Column="4"
                           Text="{x:Static resx:Strings.Dependencies_Info}"
                           FontSize="11"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="0,0,0,6"
                           />
            </Grid>

            <!--DEPENDENCIES-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        BorderBrush="#A0A0A0" 
                        BorderThickness="1" 
                        Background="White">
                    <TreeView ItemsSource="{Binding DependencyTree}" 
                              BorderThickness="0" 
                              Background="Transparent"
                              Padding="5">

                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type core:ServiceDependencyNode}"
                          ItemsSource="{Binding Dependencies}">
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.97 19.05,5.05L16.56,6.05C16.04,5.66 15.47,5.34 14.85,5.08L14.47,2.44C14.43,2.19 14.22,2 13.97,2H9.97C9.72,2 9.5,2.19 9.47,2.44L9.09,5.08C8.47,5.34 7.9,5.66 7.38,6.05L4.89,5.05C4.67,4.97 4.4,5.05 4.28,5.27L2.28,8.73C2.16,8.95 2.21,9.22 2.4,9.37L4.5,11C4.47,11.34 4.44,11.67 4.44,12C4.44,12.33 4.47,12.65 4.5,12.97L2.4,14.63C2.21,14.78 2.16,15.05 2.28,15.27L4.28,18.73C4.4,18.95 4.67,19.03 4.89,18.95L7.38,17.95C7.9,18.34 8.47,18.66 9.09,18.92L9.47,21.56C9.5,21.81 9.72,22 9.97,22H13.97C14.22,22 14.43,21.81 14.47,21.56L14.85,18.92C15.47,18.66 16.04,18.34 16.56,17.95L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
              Stretch="Uniform" Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center">
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Fill" Value="#E74C3C" />
                                                <Setter Property="ToolTip" Value="Stopped" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                        <Setter Property="Fill" Value="#2ECC71" />
                                                        <Setter Property="ToolTip" Value="Running" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                                                        <Setter Property="Fill" Value="White" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>

                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" />

                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="2,0,0,0">
                                        <StackPanel.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#6D6D6D" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                                                        <Setter Property="Foreground" Value="White" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Resources>
                                        <TextBlock Text=" (" />
                                        <TextBlock Text="{Binding ServiceName}" />
                                        <TextBlock Text=")" />
                                    </StackPanel>
                                </StackPanel>
                            </HierarchicalDataTemplate>

                            <Style x:Key="ChildItemStyle" TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="False" />
                                <Setter Property="Padding" Value="2"/>
                            </Style>
                        </TreeView.Resources>

                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="True" />
                                <Setter Property="Padding" Value="2"/>
                                <Setter Property="ItemContainerStyle" Value="{StaticResource ChildItemStyle}" />
                                <Style.Resources>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#0078D7"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#E5E5E5"/>
                                </Style.Resources>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Border>

                <!--Footer-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock  Grid.Row="0" Grid.Column="1"
                       Margin="10,3,0,0"
                       Text="{x:Static resx:Strings.Label_Dependencies_Gear_Info}" 
                       FontStyle="Normal" 
                       Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                       TextWrapping="Wrap"/>
                    
                    <TextBlock  Grid.Row="0" Grid.Column="2"
                                Margin="10,3,0,0"
                                Text="{x:Static resx:Strings.Label_F5_Shortcut_Dependencies}" 
                                FontStyle="Normal" 
                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                TextWrapping="Wrap"/>
                </Grid>
            </Grid>

        </Grid>

    </Grid>
</UserControl>
