<UserControl x:Class="Servy.Manager.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:Servy.Manager"
             xmlns:resx="clr-namespace:Servy.Manager.Resources"
             xmlns:viewmodels="clr-namespace:Servy.Manager.ViewModels"
             xmlns:converters="clr-namespace:Servy.UI.Converters;assembly=Servy.UI"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT: SEARCH + SERVICES -->
        <Border Grid.Column="0" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search -->
                <DockPanel Margin="6">
                    <TextBox Width="164" Height="24" Margin="0,0,6,0"
                             VerticalContentAlignment="Center"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             KeyDown="SearchTextBox_KeyDown" />
                    <Button Width="92" Height="24"
                            Content="{Binding SearchButtonText}"
                            Command="{Binding SearchCommand}"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
                </DockPanel>

                <!-- Services list -->
                <ListView Grid.Row="1"
                          Name="ServiceList"
                          ItemsSource="{Binding Services}"
                          SelectedItem="{Binding SelectedService, Mode=TwoWay}"
                          SelectionMode="Single"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <!-- COLUMN HEADER STYLE -->
                    <ListView.Resources>
                        <Style x:Key="ServiceColumnHeaderStyle" TargetType="GridViewColumnHeader">

                            <!-- layout -->
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="10,6"/>

                            <!-- disable drag -->
                            <Setter Property="AllowDrop" Value="False"/>

                            <!-- custom template (NO resize thumb) -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewColumnHeader">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="#D5D5D5"
                                                BorderThickness="0,0,0,1"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Resources>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>


                    <ListView.View>
                        <GridView AllowsColumnReorder="False" ColumnHeaderContainerStyle="{StaticResource ServiceColumnHeaderStyle}">

                            <GridViewColumn Width="{Binding ElementName=ServiceList, Path=ActualWidth}">
                                <!-- HEADER -->
                                <GridViewColumn.Header>
                                    <TextBlock Text="{x:Static resx:Strings.Column_Service}"
                               FontWeight="SemiBold"/>
                                </GridViewColumn.Header>

                                <!-- CELL CONTENT (padding works here) -->
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="0,6" HorizontalAlignment="Stretch">
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>



            </Grid>
        </Border>

        <!-- RIGHT: GRAPHS -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,2">
                <TextBlock Margin="0,0,6,0" Text="{x:Static resx:Strings.Label_Pid}" FontWeight="Medium" Foreground="#1B7F9F" />
                <TextBlock Margin="0,0,6,0" Text="{Binding Pid, UpdateSourceTrigger=PropertyChanged}" Foreground="#1B7F9F" />
            </DockPanel>

            <!--CPU-->
            <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#757575" BorderThickness="1" Margin="0,0,0,5">
                <Grid>
                    <Viewbox Stretch="Fill" HorizontalAlignment="Left">
                        <Canvas Width="400" Height="200">
                            <Polygon Points="{Binding CpuFillPoints}" Fill="#80C3ECFA" StrokeThickness="0"/>

                            <Rectangle Width="400" Height="200">
                                <Rectangle.Fill>
                                    <VisualBrush TileMode="Tile" Viewport="0,0,40,20" ViewportUnits="Absolute">
                                        <VisualBrush.Visual>
                                            <Path Data="M 0 20 L 40 20 M 40 0 L 40 20" Stroke="#EBEBEB" StrokeThickness="0.5" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <Polyline Points="{Binding CpuPointCollection}" Stroke="#1B7F9F" StrokeThickness="1"/>
                        </Canvas>
                    </Viewbox>

                    <TextBlock Text="{x:Static resx:Strings.Label_CPU}" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#1B7F9F" FontSize="14" />
                    <TextBlock Text="{Binding CpuUsage}" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="#1B7F9F" FontSize="14" />
                </Grid>
            </Border>

            <!--RAM-->
            <Border Grid.Row="2" Background="#FFFFFF" BorderBrush="#757575" BorderThickness="1" Margin="0,0,0,5">
                <Grid>
                    <Viewbox Stretch="Fill" HorizontalAlignment="Left">
                        <Canvas Width="400" Height="200">

                            <Polygon Points="{Binding RamFillPoints}" 
                         Fill="#80C3ECFA" 
                         StrokeThickness="0"/>

                            <Rectangle Width="400" Height="200">
                                <Rectangle.Fill>
                                    <VisualBrush TileMode="Tile" Viewport="0,0,40,20" ViewportUnits="Absolute">
                                        <VisualBrush.Visual>
                                            <Path Data="M 0 20 L 40 20 M 40 0 L 40 20" 
                                      Stroke="#EBEBEB" 
                                      StrokeThickness="0.5" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <Polyline Points="{Binding RamPointCollection}" 
                          Stroke="#1B7F9F" 
                          StrokeThickness="1" />
                        </Canvas>
                    </Viewbox>

                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
                        <TextBlock Text="{x:Static resx:Strings.Label_RAM}" Foreground="#1B7F9F" FontSize="14" />
                    </StackPanel>

                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10">
                        <TextBlock Text="{Binding RamUsage}" Foreground="#1B7F9F" FontSize="14" />
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>

    </Grid>
</UserControl>
