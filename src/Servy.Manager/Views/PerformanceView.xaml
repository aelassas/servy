<UserControl x:Class="Servy.Manager.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:Servy.Manager"
             xmlns:resx="clr-namespace:Servy.Manager.Resources"
             xmlns:viewmodels="clr-namespace:Servy.Manager.ViewModels"
             xmlns:converters="clr-namespace:Servy.UI.Converters;assembly=Servy.UI"
             xmlns:controls="clr-namespace:Servy.Manager.Views.Controls"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT: SEARCH + SERVICES -->
        <controls:ServiceListControl
            Grid.Column="0"
            Services="{Binding Services}"
            SelectedService="{Binding SelectedService}"
            SearchText="{Binding SearchText}"
            SearchButtonText="{Binding SearchButtonText}"
            SearchCommand="{Binding SearchCommand}"
            IsBusy="{Binding IsBusy}" />

        <!-- RIGHT: GRAPHS -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6" VerticalAlignment="Center">
                <Border Background="#F0F7FA" CornerRadius="2" Padding="4,0,0,0" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{x:Static resx:Strings.Label_Pid}" 
                                   Foreground="#1B7F9F" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Pid}" 
                                   Foreground="#1B7F9F" 
                                   FontWeight="Bold" 
                                   FontSize="12"
                                   VerticalAlignment="Center"/>

                        <Button Command="{Binding CopyPidCommand}"
                                Margin="5,0,0,0"
                                Padding="4"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="{x:Static resx:Strings.Button_CopyPid}"
                                FocusVisualStyle="{x:Null}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Opacity" Value="0.5" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1.0" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Path Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" 
                                  Fill="#1B7F9F" 
                                  Stretch="Uniform" 
                                  Width="12" Height="12" />
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!--CPU-->
            <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#757575" BorderThickness="1" Margin="0,0,0,5">
                <Grid>
                    <Viewbox Stretch="Fill" HorizontalAlignment="Left">
                        <Canvas Width="{Binding GraphWidth}" Height="{Binding GraphHeight}" IsHitTestVisible="False">

                            <Canvas.Background>
                                <DrawingBrush TileMode="Tile" Viewport="0,0,40,20" ViewportUnits="Absolute" Stretch="None">
                                    <DrawingBrush.Drawing>
                                        <GeometryDrawing>
                                            <GeometryDrawing.Geometry>
                                                <GeometryGroup>
                                                    <LineGeometry StartPoint="0,20" EndPoint="40,20" />
                                                    <LineGeometry StartPoint="40,0" EndPoint="40,20" />
                                                </GeometryGroup>
                                            </GeometryDrawing.Geometry>
                                            <GeometryDrawing.Pen>
                                                <Pen Brush="#EBEBEB" Thickness="1" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Canvas.Background>

                            <Polygon Points="{Binding CpuFillPoints}" Fill="#80C3ECFA" StrokeThickness="0" />

                            <Polyline Points="{Binding CpuPointCollection}" Stroke="#1B7F9F" StrokeThickness="1" />
                        </Canvas>
                    </Viewbox>

                    <TextBlock 
                        Text="{x:Static resx:Strings.Label_CPU}" 
                        Margin="10" VerticalAlignment="Top" 
                        HorizontalAlignment="Left" 
                        Foreground="#1B7F9F" 
                        FontSize="14" 
                        IsHitTestVisible="False" />
                    <TextBlock 
                        Text="{Binding CpuUsage}" 
                        Margin="10" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right" 
                        Foreground="#1B7F9F" 
                        FontSize="14" 
                        IsHitTestVisible="False" />
                </Grid>
            </Border>

            <!--RAM-->
            <Border Grid.Row="2" Background="#FFFFFF" BorderBrush="#757575" BorderThickness="1" Margin="0,0,0,5">
                <Grid>
                    <Viewbox Stretch="Fill" HorizontalAlignment="Left">
                        <Canvas Width="{Binding GraphWidth}" Height="{Binding GraphHeight}" IsHitTestVisible="False">

                            <Canvas.Background>
                                <DrawingBrush TileMode="Tile" Viewport="0,0,40,20" ViewportUnits="Absolute" Stretch="None">
                                    <DrawingBrush.Drawing>
                                        <GeometryDrawing>
                                            <GeometryDrawing.Geometry>
                                                <GeometryGroup>
                                                    <LineGeometry StartPoint="0,20" EndPoint="40,20" />
                                                    <LineGeometry StartPoint="40,0" EndPoint="40,20" />
                                                </GeometryGroup>
                                            </GeometryDrawing.Geometry>
                                            <GeometryDrawing.Pen>
                                                <Pen Brush="#EBEBEB" Thickness="1" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Canvas.Background>

                            <Polygon Points="{Binding RamFillPoints}" Fill="#80C3ECFA" StrokeThickness="0" />

                            <Polyline Points="{Binding RamPointCollection}" Stroke="#1B7F9F" StrokeThickness="1" />
                        </Canvas>
                    </Viewbox>

                    <TextBlock Text="{x:Static resx:Strings.Label_RAM}" 
                               Margin="10" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               Foreground="#1B7F9F" 
                               FontSize="14" 
                               IsHitTestVisible="False" />

                    <TextBlock Text="{Binding RamUsage}" 
                               Margin="10" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Right" 
                               Foreground="#1B7F9F" 
                               FontSize="14" 
                               IsHitTestVisible="False" />
                </Grid>
            </Border>

        </Grid>

    </Grid>
</UserControl>
